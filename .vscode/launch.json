    "version": "0.2.0",
    "configurations": [
        {
            "type": "codelldb",
            "request": "launch",
            "name": "Debug store",
            "program": "${workspaceFolder}/target/debug/clippy",
            "env": {
                "CLIPBOARD_STATE": "data"
            },
            "args": ["store"],
            "cwd": "${workspaceFolder}",
            "terminal": "integrated",
        },
        {
            "type": "codelldb",
            "request": "launch",
            "name": "Debug list",
            "program": "${workspaceFolder}/target/debug/clippy",
            "args": ["list"],
            "cwd": "${workspaceFolder}",
            "terminal": "integrated",
        },
    ]
}
